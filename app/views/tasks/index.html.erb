<h1> My tasks </h1>

  <% @tasks.each do |task| %>
    <% if task.completed %>
      <br><i class="fa-regular fa-square-check"></i>
    <% else %>
      <br><i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %> <%= link_to '<i class="fa-solid fa-trash-can text-dark"></i>'.html_safe, task_path(task), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %>
  <% end %>
<br>
<br>
<%= link_to '<i class="fa-solid fa-plus"></i>Add a new task'.html_safe , tasks_new_path(@task) %>
